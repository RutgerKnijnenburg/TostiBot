    <None Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </None>
  </ItemGroup>
 <ItemGroup>
   <Folder Include="Resources\images\" />
 </ItemGroup> 

